root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
max_line_length = 120

[*.{js,ts,vue}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[*.{md,yml,yaml,json}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = false
charset = utf-8
